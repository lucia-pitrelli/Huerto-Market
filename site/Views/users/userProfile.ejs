<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./../partials/head.ejs") %>

    <link rel="stylesheet" href="/css/forms.css" />

<body>
  <%- include ("./../partials/header.ejs") %>
    <main class="main-container">

      <form action="/" method="POST" enctype="multipart/form-data" class="form-menu">
        <section>
          <h1 class="title">Mi Perfil</h1>
        </section>
        <div>
          <h2 class="log-title">Datos de registración</h2>
        </div>
        <div class="form-item">
          <label for="email" class="form-label">E-mail</label>
          <input type="email" name="email" id="email" value="<%= oneUser.email %>" required class="form-input" />
        </div>
        <div>
          <h2 class="log-title">Datos del usuario</h2>
        </div>
        <div class="form-item">
          <label class="form-label" for="name">Nombre:</label>
          <input type="text" value="<%= oneUser.name %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="form-label">Apellido:</label>
          <input type="text" value="<%= oneUser.surname %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="fomr-label">Calle y n°:</label>
          <input type="text" value="<%= oneUser.street %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="form-label">Piso y depto:</label>
          <input type="text" value="<%= oneUser.floorLevel %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="form-label">Entre calles:</label>
          <input type="text" value="<%= oneUser.betweenStreet %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="form-label">Localidad:</label>
          <input type="text" value="<%= oneUser.locality %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="form-label">CP:</label>
          <input type="text" value="<%= oneUser.cp %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="form-label">Telefono:</label>
          <input type="text" value="<%= oneUser.phone %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="name" class="form-label">Fecha de nacimiento:</label>
          <input type="text" value="<%= oneUser.birthday %>" required class="form-input" />
        </div>
        <div class="form-item">
          <label for="picture" class="form-label">Foto</label>
          <input type="file" name="picture" id="picture" value="<%= oneUser.birthday %>" class="form-input" />
        </div>
        <div class="modificar-datos">
          <button type="submit">Enviar datos</button>
          <button type="reset">Borrar</button>
        </div>
      </form>
    </main>
    <%- include("./../partials/footer.ejs") %>
</body>

</html>